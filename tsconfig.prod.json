{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "sourceMap": false,
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "types": ["node", "@types/fs-extra"]
  },
  "exclude": [
    "spec",
    "src/public/",
    "scripts"
  ]
}
